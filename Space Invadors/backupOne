         public void gameRun(ImageIcon player, ImageIcon enemy, ImageIcon obstacles) {
         
            mainWindow.getContentPane().remove(menuePanel);
            
            
            mainWindow.add(gameObj);
            mainWindow.setVisible(true);
            
            //createWindow(gameObj);
            /*
